<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cn.bingoogolapple.photopicker.widget.BGAImageView
        android:id="@+id/my_picture"
        app:bga_iv_circle="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/username"
            android:textColor="@color/blueblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="我的姓名" />

        <TextView
            android:id="@+id/dynamic_recommend_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:text="多少时间前推荐"
            android:textColor="@color/colorGray"
            android:textSize="10dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/more_choose"
        android:src="@mipmap/more"
        android:layout_width="15dp"
        android:layout_height="15dp"

        android:layout_marginRight="5dp" />

</LinearLayout>