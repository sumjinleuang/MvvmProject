<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sob="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    sob:cardBackgroundColor="@color/white"
    sob:cardElevation="4dp"
    sob:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:id="@+id/pet_cover"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/pet_name_tv"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="宠物名称"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pet_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宠物介绍： "
                android:textSize="14sp" />


            <TextView
                android:id="@+id/pet_detail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是我最喜欢的一只宠物,生日1月1日，品种：哈士奇。宠物医生：Doctor Lee"
                android:maxLines="2"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>